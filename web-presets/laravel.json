{
  "version": 3,
  "regions": ["eu-central-1"],
  "build": {
    "commands": [
      "composer install",
      "composer require bref/laravel-bridge --update-with-dependencies",
      "bun install",
      "bun run build"
    ]
  },
  "assets": "public",
  "populateAssetCache": true,
  "functions": {
    "public/index.php": {
      "memory": 256,
      "maxDuration": 30,
      "runtime": "php-83",
      "excludeFiles": ["tests/*", ".ddev"]
    }
  },
  "routes": [
    {
      "source": "/*",
      "destination": "public/index.php"
    }
  ],
  "env": {
    "APP_NAME": "Laravel",
    "APP_ENV": "production",
    "APP_KEY": "base64:1PhUGcMtdeeIl1mWgjUxcP1/pPw+aOn7zYBoAVr2v4g=",
    "APP_DEBUG": "false",
    "LOG_CHANNEL": "stderr",
    "LOG_DEPRECATIONS_CHANNEL": "stderr",
    "LOG_LEVEL": "debug",
    "BROADCAST_DRIVER": "log",
    "SESSION_DRIVER": "cookie"
  }
}
