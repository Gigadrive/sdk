{
  "name": "sdk-monorepo",
  "version": "0.0.0",
  "private": true,
  "license": "Apache-2.0",
  "author": "Gigadrive <business@gigadrivegroup.com> (https://gigadrive.de)",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:no-cache": "turbo run build --force",
    "ci:publish": "pnpm publish -r && node scripts/update-canary-tags.mjs && changeset tag",
    "ci:version": "changeset version && pnpm install --no-frozen-lockfile",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint --cache --ext .ts,.tsx,.js,.jsx .",
    "lint:fix": "eslint --cache --fix --ext .ts,.tsx,.js,.jsx .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@local/tsup": "workspace:*",
    "@svitejs/changesets-changelog-github-compact": "^1.2.0",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^22.18.7",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-istanbul": "3.1.4",
    "dotenv": "^16.6.1",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-config-love": "^120.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.12.0",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "minimatch": "^10.0.3",
    "mock-fs": "^5.5.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsup": "^8.5.0",
    "turbo": "^2.5.8",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.9.0"
}
