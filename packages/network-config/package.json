{
  "name": "@gigadrive/network-config",
  "version": "1.1.0",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "node ../../scripts/build.mjs && tsc && cp -r ./src/v4/schema.json ./dist/v4/schema.json"
  },
  "devDependencies": {
    "esbuild": "^0.25.0",
    "@types/node": "^22"
  },
  "files": [
    "dist",
    "**/*.json"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": {
        "production": "./dist/index.js",
        "development": "./src/index.ts",
        "default": "./dist/index.js"
      }
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": {
        "production": "./dist/*.js",
        "development": "./src/*.ts",
        "default": "./dist/*.js"
      }
    }
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "minimatch": "^9.0.4",
    "yaml": "^2.7.0",
    "@gigadrive/build-utils": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gigadrive/sdk.git"
  }
}
